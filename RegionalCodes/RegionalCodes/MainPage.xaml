<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:magic="clr-namespace:MagicGradients;assembly=MagicGradients"
             xmlns:ads ="clr-namespace:RegionalCodes.Controls"
             mc:Ignorable="d"
             x:Class="RegionalCodes.MainPage"
             Visual="Material"
             >
    <Grid RowSpacing="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"  />
            <RowDefinition Height="8*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        

        <StackLayout BackgroundColor="#00000000" Spacing="0"
                Grid.Row="0" HorizontalOptions="CenterAndExpand" VerticalOptions="Fill" >

            <Grid>
                <magic:GradientView VerticalOptions="Fill" >
                    <magic:GradientView.GradientSource>
                        <magic:CssGradientSource>
                            <x:String>
                                <![CDATA[
                                      linear-gradient(306deg, rgba(54, 54, 54, 0.05) 0%, rgba(54, 54, 54, 0.05) 33.33%, rgba(85, 85, 85, 0.05) 33.33%, rgba(85, 85, 85, 0.05) 66.67%, rgba(255, 255, 255, 0.05) 66.67%, rgba(255, 255, 255, 0.05) 100%), linear-gradient(353deg, rgba(81, 81, 81, 0.05) 0%, rgba(81, 81, 81, 0.05) 33.33%, rgba(238, 238, 238, 0.05) 33.33%, rgba(238, 238, 238, 0.05) 66.67%, rgba(32, 32, 32, 0.05) 66.67%, rgba(32, 32, 32, 0.05) 100%), linear-gradient(140deg, rgba(192, 192, 192, 0.05) 0%, rgba(192, 192, 192, 0.05) 33.33%, rgba(109, 109, 109, 0.05) 33.33%, rgba(109, 109, 109, 0.05) 66.67%, rgba(30, 30, 30, 0.05) 66.67%, rgba(30, 30, 30, 0.05) 100%), linear-gradient(189deg, rgba(77, 77, 77, 0.05) 0%, rgba(77, 77, 77, 0.05) 33.33%, rgba(55, 55, 55, 0.05) 33.33%, rgba(55, 55, 55, 0.05) 66.67%, rgba(145, 145, 145, 0.05) 66.67%, rgba(145, 145, 145, 0.05) 100%), linear-gradient(90deg, rgb(9, 201, 186), rgb(18, 131, 221))
                                    ]]>
                            </x:String>
                        </magic:CssGradientSource>
                    </magic:GradientView.GradientSource>
                </magic:GradientView>
                <CarouselView x:Name="MenuCarousel"  VerticalOptions="FillAndExpand" >
            <CarouselView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                        <x:String>🚗 КОДЫ РЕГИОНОВ ►►</x:String>
                        <x:String>◄◄ 📖 СПРАВОЧНИК ►►</x:String>
                        <x:String>◄◄ ❓ ВИКТОРИНА</x:String>
                </x:Array>
            </CarouselView.ItemsSource>
            <CarouselView.ItemTemplate>
                <DataTemplate>
                        
                            <StackLayout HorizontalOptions="Fill"  VerticalOptions="Fill"  Spacing="0">

                            <Label Text="{Binding .}" HorizontalOptions="FillAndExpand" BackgroundColor="#70AAAACC" FontAttributes="Bold" TextColor="Black"  VerticalOptions="FillAndExpand" Margin="10" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="Title" />
                    </StackLayout>
                    </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
                </Grid>
 
    </StackLayout >
        <StackLayout Spacing="0" VerticalOptions="FillAndExpand"  Grid.Row="1" >
            <Grid VerticalOptions="FillAndExpand">
                <magic:GradientView VerticalOptions="Fill" >
                    <magic:GradientView.GradientSource>
                        <magic:CssGradientSource>
                            <x:String>
                                <![CDATA[
                                  linear-gradient(45deg, rgba(75, 109, 151, 0.3) 0%, rgba(75, 109, 151, 0.3) 7%, rgba(47, 165, 182, 0.3) 7%, rgba(47, 165, 182, 0.3) 9%, rgba(20, 222, 213, 0.3) 9%, rgba(20, 222, 213, 0.3) 38%, rgba(116, 24, 105, 0.3) 38%, rgba(116, 24, 105, 0.3) 42%, rgba(89, 81, 136, 0.3) 42%, rgba(89, 81, 136, 0.3) 58%, rgba(34, 194, 198, 0.3) 58%, rgba(34, 194, 198, 0.3) 61%, rgba(61, 137, 167, 0.3) 61%, rgba(61, 137, 167, 0.3) 83%, rgba(102, 52, 120, 0.3) 83%, rgba(102, 52, 120, 0.3) 100%), linear-gradient(45deg, rgba(179, 180, 240, 0.3) 0%, rgba(179, 180, 240, 0.3) 12.5%, rgba(203, 187, 249, 0.3) 12.5%, rgba(203, 187, 249, 0.3) 25%, rgba(132, 166, 221, 0.3) 25%, rgba(132, 166, 221, 0.3) 37.5%, rgba(191, 184, 244, 0.3) 37.5%, rgba(191, 184, 244, 0.3) 50%, rgba(167, 177, 235, 0.3) 50%, rgba(167, 177, 235, 0.3) 62.5%, rgba(120, 163, 216, 0.3) 62.5%, rgba(120, 163, 216, 0.3) 75%, rgba(144, 170, 225, 0.3) 75%, rgba(144, 170, 225, 0.3) 87.5%, rgba(156, 173, 230, 0.3) 87.5%, rgba(156, 173, 230, 0.3) 100%), linear-gradient(230deg, rgb(131, 231, 153), rgb(9, 22, 218))
                                    ]]>
                            </x:String>
                        </magic:CssGradientSource>
                    </magic:GradientView.GradientSource>
                </magic:GradientView>

                <StackLayout Spacing="0" x:Name="ContainerForViews"></StackLayout>
            </Grid>
        </StackLayout>
        <StackLayout HorizontalOptions="EndAndExpand" Grid.Row="2">
            <ads:AdControlView HorizontalOptions="EndAndExpand">

            </ads:AdControlView>
        </StackLayout>
    </Grid>

</ContentPage>
